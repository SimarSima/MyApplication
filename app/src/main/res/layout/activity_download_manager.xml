<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.download.DownloadManagerActivity">

    <ProgressBar
        android:id="@+id/pb_download_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tv_download_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        android:layout_marginLeft="90dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_above="@+id/pb_download_main"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp" />
    <TextView
        android:id="@+id/tv_download_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pb_download_main"
        android:text="percent"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:textSize="30sp"
        android:layout_toRightOf="@id/tv_download_status"/>

</RelativeLayout>
